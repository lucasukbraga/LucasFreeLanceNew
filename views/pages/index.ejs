  <section id="get-a-quote" class="contact-section py-5">
    <!-- Video Background -->
    <div class="video-background">
      <video muted autoplay loop playsinline disablePictureInPicture
      controlsList>
        <source src="/img/gallery/videos/8.MOV" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>
  
    <div class="form-container">
      <h2 class="section-heading mb-4 text-center">Get a Quote</h2>
      <div class="contact-form">
        <form action="/submit-quote" method="POST">

          <div class="form-group">
            <label for="name">Full Name</label>
            <input type="text" id="name" name="name" required>
          </div>
          <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" required>
          </div>
          <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" required>
          </div>
          <div class="form-group">
            <label for="job">Type of Job</label>
            <select id="job" name="job" required>
              <option value="videography">Videography</option>
              <option value="photography">Photography</option>
              <option value="content-creation">Content Creation</option>
            </select>
          </div>
          <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="4" required></textarea>
          </div>
          <button type="submit" class="submit-btn">Get a Quote</button>
        </form>
      </div>
    </div>
  </section>


